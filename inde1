  <script>
    // Tab Navigation
    function showTab(tabName) {
      document.querySelectorAll('.tab-content').forEach(content => {
        content.classList.add('hidden');
      });
      
      document.querySelectorAll('.tab-btn').forEach(btn => {
        btn.classList.remove('bg-gradient-to-r', 'from-blue-600', 'to-cyan-500', 'text-white', 'shadow-md');
        btn.classList.add('text-slate-600', 'hover:bg-slate-100');
      });
      
      document.getElementById('content-' + tabName).classList.remove('hidden');
      
      const activeBtn = document.getElementById('tab-' + tabName);
      activeBtn.classList.remove('text-slate-600', 'hover:bg-slate-100');
      activeBtn.classList.add('bg-gradient-to-r', 'from-blue-600', 'to-cyan-500', 'text-white', 'shadow-md');
    }

    // Initialize Charts
    window.addEventListener('load', function() {
      // Pie Chart
      const pieCtx = document.getElementById('pieChart').getContext('2d');
      new Chart(pieCtx, {
        type: 'doughnut',
        data: {
          labels: ['Infraestrutura', 'Docência', 'Administração', 'Desenvolvimento'],
          datasets: [{
            data: [35, 25, 20, 20],
            backgroundColor: ['#0b63a8', '#1e9bd8', '#3db3e8', '#6bc5f0'],
            borderWidth: 0
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: true,
          plugins: {
            legend: { display: false },
            tooltip: {
              backgroundColor: '#1e293b',
              padding: 12,
              cornerRadius: 8
            }
          }
        }
      });

      // Skills Bar Chart
      const skillsCtx = document.getElementById('skillsChart').getContext('2d');
      new Chart(skillsCtx, {
        type: 'bar',
        data: {
          labels: ['Infraestrutura', 'Redes', 'SQL/BD', 'Office 365', 'Automação', 'Docência'],
          datasets: [{
            label: 'Nível',
            data: [95, 90, 85, 88, 82, 78],
            backgroundColor: '#0b63a8',
            borderRadius: 8,
            barThickness: 30
          }]
        },
        options: {
          indexAxis: 'y',
          responsive: true,
          maintainAspectRatio: true,
          plugins: {
            legend: { display: false },
            tooltip: {
              backgroundColor: '#1e293b',
              padding: 12,
              cornerRadius: 8
            }
          },
          scales: {
            x: {
              beginAtZero: true,
              max: 100,
              grid: { color: '#e2e8f0' },
              ticks: { color: '#64748b' }
            },
            y: {
              grid: { display: false },
              ticks: { color: '#64748b' }
            }
          }
        }
      });

      // Radar Chart
      const radarCtx = document.getElementById('radarChart').getContext('2d');
      new Chart(radarCtx, {
        type: 'radar',
